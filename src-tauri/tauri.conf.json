{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "yarn build",
		"beforeDevCommand": "yarn dev",
		"devPath": "http://localhost:5173",
		"distDir": "../dist"
	},
	"package": {
		"productName": "tauri-demo",
		"version": "0.1.0"
	},
	"tauri": {
		"systemTray": {
			"iconPath": "icons/icon.ico",
			"iconAsTemplate": true
		},
		"allowlist": {
			"all": true,
			"shell": {
				"sidecar": true,
				"scope": [
					{ "name": "local_service/ffmpeg", "args": true, "sidecar": true },
					{ "name": "local_service/actix-demo", "args": true, "sidecar": true }
				]
			},
			"dialog": {
				"all": true,
				"open": true,
				"save": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": ["local_service/ffmpeg", "local_service/actix-demo"],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.test.dev",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"label": "main",
				"fullscreen": false,
				"height": 780,
				"resizable": false,
				"title": "",
				"decorations": false,
				"width": 1080
			}
		]
	}
}
